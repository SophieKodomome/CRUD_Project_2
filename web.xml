<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>CreateTask</servlet-name>
        <servlet-class>AddTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowTask</servlet-name>
        <servlet-class>ReadTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReadTaskById</servlet-name>
        <servlet-class>ReadTaskById</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FinishTask</servlet-name>
        <servlet-class>FinishTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CancelFinishTask</servlet-name>
        <servlet-class>CancelFinishTask</servlet-class>
    </servlet>    
    <servlet>
        <servlet-name>DeleteTask</servlet-name>
        <servlet-class>DeleteTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateTask</servlet-name>
        <servlet-class>UpdateTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DestroySession</servlet-name>
        <servlet-class>DestroySession</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CreateTask</servlet-name>
        <url-pattern>/addTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowTask</servlet-name>
        <url-pattern>/readTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReadTaskById</servlet-name>
        <url-pattern>/readTaskById</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FinishTask</servlet-name>
        <url-pattern>/finishTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CancelFinishTask</servlet-name>
        <url-pattern>/cancelFinishTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteTask</servlet-name>
        <url-pattern>/deleteTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateTask</servlet-name>
        <url-pattern>/updateTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DestroySession</servlet-name>
        <url-pattern>/destroysession</url-pattern>
    </servlet-mapping>
</web-app>